{
  "scripts": {
    "cov": "nyc report --reporter=text-lcov | coveralls",
    "cov-html": "nyc report --reporter=html",
    "build": "rollup -c",
    "prepublishOnly": "npm test",
    "start": "npm run watch & npm run server",
    "watch": "rollup -c -w 'src/**'",
    "server": "browser-sync start --files 'dist/*, style.css, index.html' --server",
    "test": "nyc --require esm --require jsdom-global/register --require ./test/register-riot-extension.js mocha src/**/*.spec.js"
  },
  "devDependencies": {
    "@riotjs/compiler": "^5.0.0",
    "@riotjs/ssr": "^6.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "browser-sync": "^2.26.13",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "rollup": "^2.33.3",
    "rollup-plugin-riot": "^5.0.0"
  },
  "dependencies": {
    "riot": "^5.0.0"
  }
}
