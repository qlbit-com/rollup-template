{
  "scripts": {
    "cov": "nyc report --reporter=text-lcov | coveralls",
    "cov-html": "nyc report --reporter=html",
    "build": "rollup -c",
    "prepublishOnly": "npm test",
    "start": "npm run watch & npm run server",
    "watch": "rollup -c -w 'src/**'",
    "server": "browser-sync start --files 'dist/*, style.css, index.html' --server",
    "test": "npm run build && nyc --require esm --require jsdom-global/register --require ./test/register-riot-extension.js mocha src/**/*.spec.js"
  },
  "devDependencies": {
    "@riotjs/compiler": "^4.9.2",
    "@riotjs/ssr": "^4.2.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "rollup": "^2.17.1",
    "rollup-plugin-riot": "^4.0.2"
  },
  "dependencies": {
    "riot": "^4.13.2"
  }
}
